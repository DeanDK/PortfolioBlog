<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portofolioo_img(@portofolioos_items.thumb_image, 'main'), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%=@portofolioos_items.title %></h1>

      <hr>

      <em><%= @portofolioos_items.subtitle %></em>

      <p><%= @portofolioos_items.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portofolioos_items.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>